        <main>
        <div class="card"> 
            <div class="card-header">
                <h3 class="track-title"><%= track.title %></h3>
                <hr><h5 class="track-description"><%= track.description %></h5>
                <iframe width="50%" height="265" src="<%=track.link%>/widget" frameborder="0"></iframe>
                <h6 class="track-original-artist" align="right"><%= track.artist %></h6>
                <% if (track.trackType == "freestyle") { %>
                    <i><h6 class="freestyle-tag freestyle-text">Freestyle</h6></i>
                    <% } else { %>
                    <i><h6 class="request-tag request-text">Request</h6></i>
                    <% } %>

            </div>
